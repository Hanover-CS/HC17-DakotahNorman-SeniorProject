<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:columnCount="4"
            android:rowCount="3"
            tools:context="com.example.dakotahnorman.fishingtextbook.BaitDisplay">

            <TextView
                android:id="@+id/first_name"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text=""
                />
            <TextView
                android:id="@+id/first_description"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text=""
                />
            <ImageView
                android:id="@+id/first_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/jig"
                />

            <TextView
                android:id="@+id/second_name"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text=""
                />
            <TextView
                android:id="@+id/second_description"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text=""
                />
            <ImageView
                android:id="@+id/second_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="2"
                android:layout_row="1"
                android:src="@drawable/jig"
                />
            <TextView
                android:id="@+id/third_name"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text=""
                />
            <TextView
                android:id="@+id/third_description"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text=""
                />
            <ImageView
                android:id="@+id/third_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="2"
                android:layout_row="2"
                android:src="@drawable/jig"
                />
            <TextView
                android:id="@+id/fourth_name"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text=""
                />
            <TextView
                android:id="@+id/fourth_description"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text=""
                />
            <ImageView
                android:id="@+id/fourth_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/jig"
                />

            </GridLayout>
</HorizontalScrollView>
