<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water temp:"/>

    <Spinner
        android:id="@+id/water_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/water_temp_choices"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of structure:"/>

    <Spinner
        android:id="@+id/structures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water_temp"
        android:entries="@array/structure_choices"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud cover:"/>

    <Spinner
        android:id="@+id/clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/structures"
        android:entries="@array/cloud_choices"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind:"/>

    <Spinner
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clouds"
        android:entries="@array/wind_choices"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Clarity:"/>

    <Spinner
        android:id="@+id/water_clarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wind"
        android:entries="@array/water_clarity_choices"
    />

    <Button
        android:id="@+id/plan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water_clarity"
        android:text="@string/plan_button_text"
        android:onClick="onClickQueryBaits"
        />





</LinearLayout>